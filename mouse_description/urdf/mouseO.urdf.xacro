<robot name="mouseO" xmlns:xacro="http://ros.org/wiki/xacro">

	<gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <!-- <robotNamespace>/mouseO</robotNamespace> -->
			<legacyModeNS>true</legacyModeNS>
        </plugin>
    </gazebo>

	<gazebo>
        <plugin name="p3d_base_controller" filename="libgazebo_ros_p3d.so">
            <!-- <robotNamespace>/mouseO</robotNamespace> -->
            <alwaysOn>true</alwaysOn>
            <updateRate>50.0</updateRate>
            <bodyName>base_link</bodyName>
            <topicName>odom</topicName>
            <gaussianNoise>0.01</gaussianNoise>
            <frameName>world</frameName>
            <xyzOffsets>0 0 0</xyzOffsets>
            <rpyOffsets>0 0 0</rpyOffsets>
        </plugin>
    </gazebo>
	
	<!--  Base Link -->
    
	<link name="base_link">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="10" />
            <inertia ixx="0.283333333333" ixy="0.0" ixz="0.0" iyy="0.483333333333" iyz="0.0" izz="0.616666666667" />
        </inertial>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.126"/>
            <geometry>
                <box size="0.7 0.5 0.3"/>
            </geometry>
        </collision>
	    <visual>
	      <geometry>
			<mesh filename="package://mouse_description/meshes/mouse.dae"/>
	      </geometry>
	    </visual>
    </link>
	
	<gazebo reference="base_link">
        <kp>1000000.0</kp>
        <kd>1.0</kd>
        <mu1>1000000.0</mu1>
        <mu2>1000000.0</mu2>
        <material>Gazebo/FlatBlack</material>

		<sensor type="ray" name="det_cat_ray_sensor">
			<pose>0.3500001 0 -0.05 0 0 0</pose>
			<visualize>true</visualize>
			<update_rate>40</update_rate>
			<ray>
				<scan>
					<horizontal>
						<samples>720</samples>
						<resolution>1</resolution>
						<min_angle>-1.9198621772</min_angle>
						<max_angle>1.9198621772</max_angle>
					</horizontal>
				</scan>
				<range>
					<min>0.10</min>
					<max>2.5</max>
					<resolution>1</resolution>
				</range>
				<noise>
					<type>gaussian</type>
					<!-- Noise parameters based on published spec for Hokuyo laser
						achieving "+-30mm" accuracy at range < 10m.  A mean of 0.0m and
						stddev of 0.01m will put 99.7% of samples within 0.03m of the true
						reading. -->
					<mean>0.0</mean>
					<stddev>0.01</stddev>
				</noise>
			</ray>
			<plugin name="gazebo_ros_mouseO_laser_controller" filename="libgazebo_ros_laser.so">
				<robotNamespace></robotNamespace>
				<topicName>/mouseO/laser/cat_scan</topicName>
				<frameName>mouse_sensor</frameName>
			</plugin>
		</sensor>
    </gazebo>

	<!-- Right Wheel  -->
		
	<link name="right_wheel">
      <visual>
        <origin rpy="1.57075 0 0" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.05" radius="0.035"/>
        </geometry>
        <material name="black"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
      </visual>
	  <collision>
	    <origin rpy="1.57075 0 0" xyz="0 0 0"/>
	    <geometry>
	      <cylinder length="0.05" radius="0.035"/>
	    </geometry>
      </collision>
      <inertial>
	    <mass value="1"/>
	    <inertia ixx="0.000514583333333" ixy="0.0" ixz="0.0" iyy="0.000514583333333" iyz="0.0" izz="0.0006125" />
	  </inertial>
    </link>
	
    <joint name="right_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="right_wheel"/>
	  <limit effort="200" velocity="1000.0" />
      <origin rpy="0 0 0" xyz="0.133333333333 -0.1 -0.055"/>
	  <axis rpy="0 0 0" xyz="0 1 0"/>
    </joint>

	<gazebo reference="right_wheel">
	  <mu1 value="200.0"/>
	  <mu2 value="100.0"/>
	  <kp value="10000000.0" />
	  <kd value="1.0" />
	  <material>Gazebo/Gold</material>
	</gazebo>
	
	<transmission name="right_wheel_trans">
	  <type>transmission_interface/SimpleTransmission</type>
	  <actuator name="right_wheel_motor">
		  <mechanicalReduction>1</mechanicalReduction>
		  <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
	  </actuator>
	  <joint name="right_wheel_joint">
		<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
	  </joint>
	</transmission>

	<!--  Left Wheel  -->
		
	<link name="left_wheel">
	  <visual>
		<origin rpy="1.57075 0 0" xyz="0 0 0"/>
		<geometry>
		  <cylinder length="0.05" radius="0.035"/>
		</geometry>
		<material name="black"/>
	  </visual>
	  <collision>
	    <origin rpy="1.57075 0 0" xyz="0 0 0"/>
	    <geometry>
	      <cylinder length="0.05" radius="0.035"/>
	    </geometry>
      </collision>
      <inertial>
	    <mass value="1"/>
	    <inertia ixx="0.000514583333333" ixy="0.0" ixz="0.0" iyy="0.000514583333333" iyz="0.0" izz="0.0006125" />
	  </inertial>
	</link>
	
	<joint name="left_wheel_joint" type="continuous">
	  <parent link="base_link"/>
	  <child link="left_wheel"/>
	  <limit effort="200" velocity="1000.0" />
	  <origin rpy="0 0 0" xyz="0.133333333333 0.1 -0.055"/>
	  <axis rpy="0 0 0" xyz="0 1 0"/>
	</joint>

	<gazebo reference="left_wheel">
	  <mu1 value="200.0"/>
	  <mu2 value="100.0"/>
	  <kp value="10000000.0" />
	  <kd value="1.0" />
	  <material>Gazebo/Gold</material>
	</gazebo>
	
	<transmission name="left_wheel_trans">
	  <type>transmission_interface/SimpleTransmission</type>
	  <actuator name="left_wheel_motor">
		<mechanicalReduction>1</mechanicalReduction>
		<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
	  </actuator>
	  <joint name="left_wheel_joint">
		<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
	  </joint>
	</transmission>

	<!--  Back  -->

	<link name="back_wheel">
	  <visual>
		<geometry>
		  <sphere radius="0.035"/>
		</geometry>
		<material name="black"/>
	  </visual>
	  <collision>
	    <geometry>
	      <sphere radius="0.035"/>
	    </geometry>
      </collision>
      <inertial>
	    <mass value="1"/>
	    <inertia ixx="0.000514583333333" ixy="0.0" ixz="0.0" iyy="0.000514583333333" iyz="0.0" izz="0.0006125" />
	  </inertial>
	</link>
	
	<joint name="back_wheel_joint" type="continuous">
	  <parent link="base_link"/>
	  <child link="back_wheel"/>
	  <limit effort="200" velocity="1000.0" />
	  <origin rpy="0 0 0" xyz="-0.15 0 -0.055"/>
	  <axis rpy="0 0 0" xyz="0 1 0"/>
	</joint>

	<gazebo reference="back_wheel">
      <mu1 value="0.0"/>
      <mu2 value="0.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Gold</material>
    </gazebo>
	
	<transmission name="back_wheel_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="back_wheel_motor">
        <mechanicalReduction>1</mechanicalReduction>
		<hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </actuator>
      <joint name="back_wheel_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
    </transmission>

	<!--  Sensors  -->
	<link name="mouse_sensor">
		<visual>
			<origin xyz="0 0 0"/>
			<geometry>
				<sphere radius="0.01"/>
			</geometry>
			<material name="black"/>
		</visual>
		<collision>
			<origin xyz="0 0 0"/>
			<geometry>
				<sphere radius="0.01"/>
			</geometry>
		</collision>
	</link>
	
	<joint name="sensor_joint" type="fixed">
		<parent link="base_link"/>
		<child link="mouse_sensor"/>
		<origin rpy="0 0 0" xyz="0.3500001 0 1.1"/>
	</joint>

	<gazebo reference="mouse_sensor">
		<sensor type="ray" name="det_wall_ray_sensor">
			<pose>0 0 0 0 0 0</pose>
			<visualize>true</visualize>
			<update_rate>40</update_rate>
			<ray>
				<scan>
					<horizontal>
						<samples>720</samples>
						<resolution>1</resolution>
						<min_angle>-1.9198621772</min_angle>
						<max_angle>1.9198621772</max_angle>
					</horizontal>
				</scan>
				<range>
					<min>0.10</min>
					<max>2.5</max>
					<resolution>1</resolution>
				</range>
				<noise>
					<type>gaussian</type>
					<!-- Noise parameters based on published spec for Hokuyo laser
						achieving "+-30mm" accuracy at range < 10m.  A mean of 0.0m and
						stddev of 0.01m will put 99.7% of samples within 0.03m of the true
						reading. -->
					<mean>0.0</mean>
					<stddev>0.01</stddev>
				</noise>
			</ray>
			<plugin name="gazebo_ros_mouseO_laser_controller" filename="libgazebo_ros_laser.so">
				<robotNamespace></robotNamespace>
				<topicName>/mouseO/laser/wall_scan</topicName>
				<frameName>mouse_sensor</frameName>
			</plugin>
		</sensor>
	</gazebo>
</robot>
